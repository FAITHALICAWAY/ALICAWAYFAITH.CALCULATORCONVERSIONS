#include <stdio.h>

void convertNumber(int num) {
    int i;
    int started = 0;

    printf("\nBinary: ");
    for (i = sizeof(num) * 8 - 1; i >= 0; i--) {
        if ((num >> i) & 1) {
            started = 1;
            printf("1");
        } else if (started) {
            printf("0");
        }
    }
    if (!started) {
        printf("0"); 
    }
    
    printf("\nOctal: %o", num);
    printf("\nHexadecimal: %X", num);
}

int main() {
    char operator;
    double num1, num2, result;

    printf("Enter first number: ");
    scanf("%lf", &num1);

    printf("Enter an operator (+, -, *, /): ");
    scanf(" %c", &operator);

    printf("Enter second number: ");
    scanf("%lf", &num2);

    if (operator == '+') {
        result = num1 + num2;
        printf("\nResult: %.2lf\n", result);
    }
    else if (operator == '-') {
        result = num1 - num2;
        printf("\nResult: %.2lf\n", result);
    }
    else if (operator == '*') {
        result = num1 * num2;
        printf("\nResult: %.2lf\n", result);
    }
    else if (operator == '/') {
        if (num2 != 0) {
            result = num1 / num2;
            printf("\nResult: %.2lf\n", result);
        } else {
            printf("\nError! Division by zero.\n");
            return 0;
        }
    }
    else {
        printf("\nError: Invalid operator.\n");
        return 0;
    }

    printf("\n--- Number Conversions ---\n");
    convertNumber((int)result);

    printf("\n\n"); 
    return 0;
}

